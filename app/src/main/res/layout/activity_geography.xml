<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hg_wallpaper"
    tools:context="com.example.android.quizapplication.GeographyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_message_geography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:text="@string/welcome_message_geography_quiz"
            android:textColor="@color/white"
            android:textSize="@dimen/subtitle_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_one"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_one"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_two"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_two"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_three"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <RadioGroup
                android:id="@+id/geography_radiogroup_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_three"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rb_geo3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_3a"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_3b"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_3c"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_four"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <RadioGroup
                android:id="@+id/geography_radiogroup_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_four"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_geo4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_4a"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_4b"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_4c"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_five"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_five"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_six"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <RadioGroup
                android:id="@+id/geography_radiogroup_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_six"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_geo6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_6a"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_6b"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>

                <RadioButton
                    android:id="@+id/rb_geo6c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:text="@string/answer_geography_6c"
                    android:textColor="@color/brown"
                    android:fontFamily="sans-serif-condensed"/>
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_seven"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_seven"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_eight"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_eight"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_nine"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/geography_tv_queastion_nine"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/geography_cb_a"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/checkbox_geography_a"
                    android:textColor="@color/brown" />

                <CheckBox
                    android:id="@+id/geography_cb_b"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/checkbox_geography_b"
                    android:textColor="@color/brown" />

                <CheckBox
                    android:id="@+id/geography_cb_c"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/checkbox_geography_c"
                    android:textColor="@color/brown" />

                <CheckBox
                    android:id="@+id/geography_cb_d"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/checkbox_geography_d"
                    android:textColor="@color/brown" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/usual_space"
            android:background="@drawable/layout_backgroud">

            <TextView
                android:id="@+id/geography_tv_queastion_ten"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/geography_question_ten"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/geo_et_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/geography_tv_queastion_ten"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:hint="@string/type_your_answer_hint"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_answer_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:fontFamily="sans-serif-condensed"
                android:onClick="getScore"
                android:text="@string/submit_answers_button"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/try_again_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:fontFamily="sans-serif-condensed"
                android:onClick="resetAll"
                android:text="@string/try_again"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/redirect_geography"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="@string/take_me_to_Geography"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:onClick="redirectH"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
