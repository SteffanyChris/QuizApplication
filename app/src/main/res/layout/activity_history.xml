                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/history_question_one"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/history_et_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_tv_queastion_one"
                android:layout_marginLeft="@dimen/usual_space"
                android:layout_marginRight="@dimen/usual_space"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/type_your_answer_hint"
                android:textColor="@color/white"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <RelativeLayout
