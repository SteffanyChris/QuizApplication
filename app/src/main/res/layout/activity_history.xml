            <RadioGroup
                android:id="@+id/history_radiogroup_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_tv_queastion_six"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_history_1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/rb_history_a"
                    android:textColor="@color/brown" />

                <RadioButton
                    android:id="@+id/rb_history_1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/usual_space"
                    android:fontFamily="sans-serif-condensed"
